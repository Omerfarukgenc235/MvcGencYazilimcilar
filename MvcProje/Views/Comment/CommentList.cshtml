@model IEnumerable<EntityLayer.Concrete.Comment>

<div class="pt-5">
    <h3 class="mb-5">@ViewBag.toplam Yorum</h3>
    <ul class="comment-list">
        @foreach (var x in Model)
        {
        <li class="comment">
            <div class="vcard">

                <img src="https://i.hizliresim.com/p3g6cf5.png" alt="Image placeholder">
            </div>
            <div class="comment-body">
                <h3>@x.UserName</h3>
                <div class="meta">@(((DateTime)@x.CommentDate).ToString("dd-MMM-yyyy"))</div>
                <p>@x.CommentText</p>
            </div>
        </li>
        }
    </ul>
    @Html.Action("LeaveComment", "Comment")
</div>