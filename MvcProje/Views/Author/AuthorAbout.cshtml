@model IEnumerable<EntityLayer.Concrete.Blog>
    @foreach (var x in Model)
    {
    <div class="sidebar-box">
        <div class="bio text-center">
            <img src="@x.Authors.AuthorImage" style="height:150px;width:150px;" alt="Image Placeholder" class="img-fluid mb-5">
            <div class="bio-body">
                <h2>@x.Authors.AuthorName</h2>
                <p class="mb-4">@x.Authors.AuthorAbout</p>
                <p><a href="~/Blog/Index/" class="btn btn-primary btn-sm rounded px-4 py-2">Ana Sayfaya Dön</a></p>
            
            </div>
        </div>
    </div>
    }
