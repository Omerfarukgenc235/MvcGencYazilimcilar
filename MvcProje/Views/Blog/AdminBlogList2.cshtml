@model IEnumerable<EntityLayer.Concrete.Blog>

@{
    ViewBag.Title = "AdminBlogList2";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!DOCTYPE html>

<html>



<body class="hold-transition sidebar-mini">



    <!-- Main content -->

    <section class="content">

        <!-- Default box -->

        <div class="card">

            <div class="card-header">

                <h3 class="card-title">Bloglar</h3>

                <div class="card-tools">

                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Gizle">

                        <i class="fas fa-minus"></i>

                    </button>

                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Kapat">

                        <i class="fas fa-times"></i>

                    </button>

                </div>

            </div>

            <div class="card-body p-0">

                <table class="table table-striped projects">

                    <thead>

                        <tr>

                            <th style="width: 1%">

                                ID

                            </th>

                            <th style="width: 20%">

                                Blog Başlığı

                            </th>

                            <th style="width: 10%">

                                Yazar

                            </th>

                            <th style="width: 18%" class="text-center">

                                Beğeni Oran

                            </th>

                            <th style="width: 8%" class="text-center">

                                Kategori

                            </th>

                            <th style="width: 20%">

                            </th>

                        </tr>

                    </thead>

                    <tbody>
                        @foreach (var x in Model)
                        {
                            <tr>

                                <td>

                                    @x.BlogID

                                </td>

                                <td>

                                    <a>
                                        <b>

                                            @x.BlogTitle

                                        </b>
                                    </a>

                                    <br />


                                </td>

                                <td>

                                    <ul class="list-inline">

                                        <li class="list-inline-item">

                                            <img alt="Avatar" class="table-avatar" src="@x.Authors.AuthorImage">

                                        </li>


                                    </ul>

                                </td>

                                <td class="project_progress">

                                    <div class="progress progress-sm">

                                        <div class="progress-bar bg-green" role="progressbar" aria-volumenow="57" aria-volumemin="0" aria-volumemax="100" style="width: 57%">

                                        </div>

                                    </div>

                                    <small>

                                        57% Complete

                                    </small>

                                </td>

                                <td class="project-state">

                                    <span class="badge badge-success">@x.Category.CategoryName</span>

                                </td>

                                <td class="project-actions text-right">

                                    <a class="btn btn-primary btn-sm" href="/Blog/BlogDetay/@x.BlogID">

                                        <i class="fas fa-folder">

                                        </i>

                                        Sitede gör

                                    </a>

                                    <a class="btn btn-info btn-sm" href="/Blog/UpdateBlog/@x.BlogID">

                                        <i class="fas fa-pencil-alt">

                                        </i>

                                        Düzenle
                                        
                                    </a>

                                    <a class="btn btn-danger btn-sm" href=""/Blog/DeleteBlog/@x.BlogID">

                                    <i class="fas fa-trash">

                                    </i>

                                    Sil

                                    </a>

                                </td>

                            </tr>
                        }

                    </tbody>

                </table>

            </div>

            <!-- /.card-body -->

        </div>

        <!-- /.card -->

    </section>

</body>

</html>