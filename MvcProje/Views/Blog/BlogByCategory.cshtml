@model IEnumerable<EntityLayer.Concrete.Blog>
@{
    ViewBag.Title = "BlogByCategory";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@{ string color = "";}

<div class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <span>Kategori</span>
              
                    <h3>@ViewBag.kategoriname</h3>
                    <p>@ViewBag.kategoriaciklama</p>
            </div>
        </div>
    </div>
</div>

<div class="site-section bg-white">
    <div class="container">
        <div class="row">
            @foreach (var x in Model)
            {
                if (x.Category.CategoryName == "Tatil & Seyahat")
                {
                    color = "post-category text-white bg-success mb-3";
                }
                if (x.Category.CategoryName == "Teknoloji")
                {
                    color = "post-category text-white bg-warning mb-3";
                }
                if (x.Category.CategoryName == "Yazılım")
                {
                    color = "post-category text-white bg-info mb-3";
                }
                if (x.Category.CategoryName == "Film & Dizi")
                {
                    color = "post-category text-white bg-danger mb-3";
                }
                if (x.Category.CategoryName == "Spor")
                {
                    color = "post-category text-white bg-primary mb-3";
                }
                if (x.Category.CategoryName == "Oyun")
                {
                    color = "post-category text-white bg-secondary mb-3";
                }
                <div class="col-lg-4 mb-4">
                    <div class="entry2">
                        <a href="/Blog/BlogDetay/@x.BlogID"><img src="@x.BlogImage" style="height:230px;width:500px;" alt="Image" class="img-fluid rounded"></a>
                        <div class="excerpt">
                            <span class="@color">@x.Category.CategoryName</span>
                            <h2><a href="/Blog/BlogDetay/@x.BlogID">@x.BlogTitle</a></h2>
                            <div class="post-meta align-items-center text-left clearfix">
                                <figure class="author-figure mb-0 mr-3 float-left"><img src="@x.Authors.AuthorImage" style="height:25px;width:25px;" alt="Image" class="img-fluid"></figure>
                                <span class="d-inline-block mt-1"><a href="/Blog/BlogDetay/@x.BlogID">@x.Authors.AuthorName</a></span>
                                <span>&nbsp;-&nbsp; @(((DateTime)@x.BlogDate).ToString("dd-MMM-yyyy"))</span>
                            </div>

                            <p>@x.BlogContent.Substring(0, x.BlogContent.Substring(0, 80).LastIndexOf(" "))...</p>
                            <p><a href="/Blog/BlogDetay/@x.BlogID">Devamını Oku</a></p>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</div>

@Html.Action("Footer", "About")
