@model IEnumerable<EntityLayer.Concrete.Blog>
@{
    ViewBag.Title = "AdminBlogList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Listesi</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Kategori</th>
        <th>Yazar</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
        <th>Yorumlar</th>
    </tr>
    @foreach(var x in Model)
    {
    <tr>
        <td>@x.BlogID</td>
        <td>@x.BlogTitle</td>
        <td>@x.Category.CategoryName</td>
        <td>@x.Authors.AuthorName</td>
        <td>@x.BlogDate</td>
        <td><a href="/Blog/DeleteBlog/@x.BlogID" class="btn btn-danger">Sil</a></td>
        <td><a href="/Blog/UpdateBlog/@x.BlogID" class="btn btn-success">Güncelle</a></td>
        <td><a href="/Blog/BlogDetay/@x.BlogID" class="btn btn-info">Detaylar</a></td>
        <td><a href="/Blog/GetCommentByBlog/@x.BlogID" class="btn btn-primary">Yorumlar</a></td>
    </tr>
    }
</table>
<a href="~/Blog/YeniBlog/" class="btn btn-primary">Yeni Blog Ekle</a>