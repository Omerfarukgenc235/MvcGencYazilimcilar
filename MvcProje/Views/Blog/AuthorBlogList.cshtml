@model IEnumerable<EntityLayer.Concrete.Blog>

@{
    ViewBag.Title = "AuthorBlogList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



@{string color = ""; }
@{string durum = ""; }

<!DOCTYPE html>

<html>



<body class="hold-transition sidebar-mini">



    <!-- Main content -->

    <section class="content">

        <!-- Default box -->

        <div class="card">

            <div class="card-header">

                <h3 class="card-title">Blog Listem</h3>

                <div class="card-tools">

                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">

                        <i class="fas fa-minus"></i>

                    </button>

                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">

                        <i class="fas fa-times"></i>

                    </button>

                </div>

            </div>

            <div class="card-body p-0">

                <table class="table table-striped projects">

                    <thead>

                        <tr>

                            <th style="width: 1%">

                                ID

                            </th>

                            <th style="width: 20%">

                                Blog Başlığı

                            </th>



                            <th>

                                Blog Değerlendirme Oranı

                            </th>

                            <th style="width: 8%" class="text-center">

                                Durum

                            </th>

                            <th style="width: 20%">

                            </th>

                        </tr>

                    </thead>

                    <tbody>
                        @foreach (var x in Model)
                        {
                            if (x.BlogRating >= 85)
                            {
                                color = "post-category text-white bg-success mb-3";
                                durum = "Çok iyi";
                            }
                            if (x.BlogRating >= 70 && x.BlogRating <= 84)
                            {
                                color = "post-category text-white bg-info mb-3";
                                durum = "Başarılı";

                            }
                            if (x.BlogRating >= 50 && x.BlogRating <= 69)
                            {
                                color = "post-category text-white bg-warning mb-3";
                                durum = "Ortalama";

                            }
                            if (x.BlogRating >= 0 && x.BlogRating <= 49)
                            {
                                color = "post-category text-white bg-danger mb-3";
                                durum = "Kötü";

                            }

                            <tr>

                                <td>

                                    @x.BlogID

                                </td>

                                <td>

                                    <a>
                                        <b>

                                            @x.BlogTitle

                                        </b>
                                    </a>

                                    <br />


                                </td>


                                <td class="project_progress">

                                    <div class="progress progress-sm">

                                        <div class="progress-bar bg-green" role="progressbar" aria-volumenow="@x.BlogRating" aria-volumemin="0" aria-volumemax="100" style="width: @x.BlogRating%">

                                        </div>

                                    </div>

                                    <small>

                                        Aldığı Puan: @x.BlogRating

                                    </small>

                                </td>

                                <td class="project-state">

                                    <span class="badge @color">@durum</span>

                                </td>

                                <td class="project-actions text-right">



                                    <a class="btn btn-info btn-sm" href="/Blog/UpdateBlog/@x.BlogID">

                                        <i class="fas fa-pencil-alt">

                                        </i>

                                        Düzenle

                                    </a>

                                    <a class="btn btn-danger btn-sm" href="#">

                                        <i class="fas fa-trash">

                                        </i>

                                        Sil

                                    </a>

                                </td>

                            </tr>
                        }

                    </tbody>

                </table>
            </div>
            <a href="/Blog/YeniBlog/" class="btn btn-info">Yeni Blog Yaz</a>

            <!-- /.card-body -->

        </div>

        <!-- /.card -->

    </section>

</body>

</html>